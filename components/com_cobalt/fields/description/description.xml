<?xml version="1.0" encoding="utf-8"?>
<cobaltfield>
    <name>Description</name>
    <group>Special Form Elements</group>

    <config>
        <fields name="params">
            <fieldset name="tmpl">
                <field type="filelist" name="template_input" filter="php$" hide_none="1" hide_default="1"
                       directory="/components/com_cobalt/fields/description/tmpl/input" label="F_TMPLINPUT"
                       default="default.php"/>
                <field type="filelist" name="template_output_list" filter="php$" hide_none="1" hide_default="1"
                       directory="/components/com_cobalt/fields/description/tmpl/output" label="F_TMPLLIST"
                       default="default.php"/>
                <field type="filelist" name="template_output_full" filter="php$" hide_none="1" hide_default="1"
                       directory="/components/com_cobalt/fields/description/tmpl/output" label="F_TMPLFULL"
                       default="default.php"/>
            </fieldset>

            <fieldset name="core">
                <field name="sortable" type="radio" class="btn-group" default="0" label="F_SORTABLE" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>

            <fieldset name="filter" label="FS_FILTERGEN">
                <field type="filelist" name="template_filter" filter="php$" hide_none="1" hide_default="1"
                       directory="/components/com_cobalt/fields/description/tmpl/filter" label="F_TMPLFILTER"
                       default="default.php"/>
                <field type="filelist" name="template_filter_module" filter="php$" hide_none="1" hide_default="1"
                       directory="/components/com_cobalt/fields/description/tmpl/filter" label="F_TMPLFILTERMODULE"
                       default="default.php"/>
                <field name="filter_enable" type="radio" class="btn-group" default="0" label="F_ENABLE" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="filter_hide" type="radio" class="btn-group" default="0" label="F_HIDE"
                       description="F_HIDE_DESCR">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="filter_descr" type="text" default="" size="40" label="F_DESCR" description=""/>
            </fieldset>

            <fieldset name="filter2" label="FS_FILTERFIELDSPEC">
                <field name="filter_show_number" type="radio" class="btn-group" default="1" label="F_FBOXSHOWNUMS"
                       description="F_FBOXSHOWNUMS_DESCR">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="filter_linkage" type="list" default="1" label="F_VALUELINKAGE"
                       description="F_VALUELINKAGE_DESCR">
                    <option value="0">XML_OPT_NOFILTERLINK</option>
                    <option value="2">XML_OPT_SMALICONASFLINK</option>
                </field>
                <field name="filter_icon" type="imagelist" default="funnel-small.png"
                       directory="/components/com_cobalt/images/filter/" label="F_ICON" description="F_ICON_DESCR"/>
                <field name="filter_tip" type="text" default="Show all records where %s is equal to %s" size="40"
                       label="F_VALUETOOLTIP" description="F_VALUETOOLTIP_DESCR"/>
            </fieldset>

            <fieldset name="general" label="FS_GENERAL">
                <field name="limit" type="text" size="3" default="3" label="F_MULTILIMIT"
                       description="F_MULTILIMIT_DESCR"/>

                <field name="label" type="radio" class="btn-group" default="1" label="F_INPUTLABEL" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="label_change" type="radio" class="btn-group" default="1" label="F_ALLOWINPUTLABEL"
                       description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="default_labels" type="textarea" rows="5" cols="40" default="" label="F_DEFAULTLABELS"
                       description="F_DEFAULTLABELS_DESCR"/>
            </fieldset>
        </fields>
    </config>
</cobaltfield>