<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="b0_delete_records"  addfieldpath="/libraries/mint/forms/fields" label="Удаление записи(ей)" description="Simply click button">
        <field name="item_id" type="text" label="Id записи для удаления" />
        <field name="section_id" type="meresourcessection" default="" alias="1" label="Раздел" />
        <field name="type_id" type="mertype" default="" label="Тип контента" />
        <field name="status" type="list" label="Состояние" >
            <option value="0">Все</option>
            <option value="1">Опубликованные</option>
            <option value="2">Не опубликованные</option>
        </field>
        <field name="is_update" type="checkbox" default="1" label="Обновлять или нет" />
    </fieldset>
</form>