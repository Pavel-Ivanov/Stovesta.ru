<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset name="b0_change_value" addfieldpath="/libraries/mint/forms/fields" label="Changing value" description="Simply click button">
    <field name="section_id" type="meresourcessection" default="" alias="1" label="Раздел" required="true"/>
    <field name="field_id" type="meresourcesfields" filters="'text', 'checkbox', 'select'" key="id" default="" label="Поле, в котором меняем значение" required="true" />
    <field name="value" type="text" default="" label="Значение, которое меняем" required="true" />
    <field name="value_to_change" type="text" default="" label="Значение, на которое меняем" required="true" />
    <field name="search_type" type="list" label="Тип поиска">
        <option value="0">LIKE</option>
        <option value="1">Exact</option>
    </field>
    <field name="search_limit_start" type="text" default="0" label="Limit start" />
    <field name="search_limit_number" type="text" default="0" label="Limit number" />
    <field name="is_update" type="checkbox" default="1" label="Обновлять или нет" />
</fieldset>
</form>
