        <field name="type_id" type="mertype" default="" label="Тип контента" required="true" />
        <field name="field_id" type="meresourcesfields" filters="'checkbox', 'select'" key="id" label="Поле, в котором удаляем значение" required="true" />
        <field name="value" type="text" label="Значение, которое удаляем" required="true" />
        <field name="item_id" type="text" label="Id записи для удаления" />
        <field name="search_limit_start" type="text" default="0" label="Limit start" />
        <field name="search_limit_number" type="text" default="0" label="Limit number" />
        <field name="is_update" type="checkbox" default="1" label="Обновлять или нет" />
    </fieldset>
</form>