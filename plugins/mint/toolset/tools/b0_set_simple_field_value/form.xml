<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="b0_set_simple_field_value" addfieldpath="/libraries/mint/forms/fields" label="Set field value" description="Simply click button">
        <field name="section_id" type="meresourcessection" default="" alias="1" label="Section" required="true"/>
        <field name="type_id" type="mertype" default="" label="Content type" required="true" />
        <field name="field_id" type="meresourcesfields" filters="'text', 'textarea', 'boolean'" key="id" default="" label="Field for set value" required="true" />
        <field name="value" type="text" default="" label="Value for set" required="true" />
        <field name="search_limit_start" type="text" default="0" label="Limit start" />
        <field name="search_limit_number" type="text" default="0" label="Limit number" />
    </fieldset>
</form>